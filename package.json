{
  "name": "budjet",
  "version": "0.0.1",
  "description": "A Simple Bill Tracker",
  "productName": "BudJet",
  "author": "Deven Phillips <deven.phillips@redhat.com>",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.ts,.vue ./",
    "test": "echo \"No test specified\" && exit 0",
    "serve": "quasar dev",
    "watch": "npm-watch",
    "prism": "prism mock -d --cors -p 7080 openapi.yml",
    "openapi": "openapi-generator-cli generate -g typescript-axios -i openapi.yml -o src/sdk/ -p withSeparateModelsAndApi=true,apiPackage=api,modelPackage=models,legacyDiscriminatorBehavior=false"
  },
  "watch": {
    "openapi": {
      "patterns": [
        "openapi.yml"
      ],
      "runOnChangeOnly": false,
      "inherit": true,
      "clearBuffer": true
    },
    "prism": {
      "inherit": true,
      "patterns": [
        "openapi"
      ],
      "extensions": [
        "yml"
      ]
    },
    "serve": {
      "inherit": true,
      "delay": 4000,
      "patterns": [
        "package"
      ],
      "extensions": [
        "json"
      ]
    }
  },
  "dependencies": {
    "@quasar/extras": "^1.0.0",
    "axios": "^0.24.0",
    "core-js": "^3.6.5",
    "pinia": "^2.0.9",
    "quasar": "^2.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.13.14",
    "@openapitools/openapi-generator-cli": "^2.4.23",
    "@quasar/app": "^3.0.0",
    "@stoplight/prism-cli": "^4.6.1",
    "@types/node": "^12.20.21",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-vue": "^7.0.0",
    "npm-watch": "^0.11.0"
  },
  "browserslist": [
    "last 10 Chrome versions",
    "last 10 Firefox versions",
    "last 4 Edge versions",
    "last 7 Safari versions",
    "last 8 Android versions",
    "last 8 ChromeAndroid versions",
    "last 8 FirefoxAndroid versions",
    "last 10 iOS versions",
    "last 5 Opera versions"
  ],
  "engines": {
    "node": ">= 12.22.1",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
